<%= link_to "Home", lists_path, class: "btn btn-success" %>

<br>

<h1><%= "#{@list.name}" %></h1>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
<%= link_to "Delete this list", list_path(@list), data: {turbo_method: :delete}, class: "btn btn-secondary" %>

<br>

<% @bookmarks.each do |bookmark| %>
  <%= Movie.find(bookmark.movie_id).title %><br>
  <%= bookmark.comment %><br>
  <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete}, class: "btn btn-danger" %><br><br>
<% end %>
